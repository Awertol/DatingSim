<Window x:Class="DatingSim.PreFinishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatingSim"
        mc:Ignorable="d"
        Title="M&amp;M Dating Sim &lt;3" Height="1000" Width="1800" MaxWidth="1920" MaxHeight="1080" 
        MinWidth="1280" MinHeight="720" Background="HotPink">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <MediaElement x:Name="prehravacVideo" Grid.Row="0" Grid.RowSpan="2" LoadedBehavior="Manual" Volume="100" 
                       MediaEnded="prehravacVideo_MediaEnded"/>
        <Button x:Name="btnEnd" Grid.Row="1" HorizontalAlignment="Stretch" Visibility="Hidden" VerticalAlignment="Stretch" Margin="5"
                Content="ZHODNOTIT MÁ ROZHODNUTÍ" FontSize="72" Background="#99DC00C6" FontFamily="Comic Sans MS" FontWeight="Bold" Click="btnEnd_Click" />
    </Grid>
</Window>
